@echo off
REM ========================================================================
REM Script de execucao mensal - ActiveCampaign para BigQuery
REM ========================================================================
REM
REM IMPORTANTE: Copie este arquivo para "executar.bat" e configure sua API key
REM
REM   1. Copie: copy executar.bat.example executar.bat
REM   2. Edite executar.bat e substitua SUA_API_KEY_AQUI pela sua chave real
REM
REM ========================================================================

echo ========================================================================
echo           EXTRACAO ACTIVECAMPAIGN - BIGQUERY
echo ========================================================================
echo.

REM Configura a API Key do ActiveCampaign
REM SUBSTITUA "SUA_API_KEY_AQUI" pela sua API key real do ActiveCampaign
set ACTIVECAMPAIGN_API_KEY=SUA_API_KEY_AQUI

REM Executa o script principal
echo Iniciando extracao de dados...
echo.
python activecampaign_to_bigquery.py

echo.
echo ========================================================================
echo Deseja verificar os dados inseridos no BigQuery? (S/N)
set /p VERIFICAR=
if /i "%VERIFICAR%"=="S" (
    echo.
    python verificar_dados.py
)

echo.
echo ========================================================================
echo Processo concluido!
echo ========================================================================
pause
